<form action="<%= postUri %>" method="post">
  <label for="username">username</label>
  <input
    type="text"
    name="username"
    value="<%= user?.username %>"
    maxlength="<%= maxLength %>"
    minlength="<%= minLength %>"
    required
  />
  <label for="email">email</label>
  <input
    type="email"
    name="email"
    value="<%= user?.email %>"
    maxlength="<%= maxLength %>"
    minlength="<%= minLength %>"
    required
  />
  <label for="password">password</label>
  <input
    type="password"
    name="password"
    value="<%= user?.password %>"
    required
  />
  <label for="confirmPassword">confirm password</label>
  <input
    type="password"
    name="confirmPassword"
    value="<%= user?.confirmPassword %>"
    required
  />
  <label for="firstname">firstname</label>
  <input
    type="text"
    name="firstname"
    value="<%= user?.firstname %>"
    maxlength="<%= maxLength %> "
    minlength="<%= minLength %>"
  />
  <label for="lastname">lastname</label>
  <input
    type="text"
    name="lastname"
    value="<%= user?.lastname %>"
    maxlength="<%= maxLength %>"
    minlength="<%= minLength %>"
  />
  <div class="form-btn-bar">
    <button type="submit">submit</button>
    <button type="reset">reset</button>
  </div>
</form>

<ul class="form-err-msg">
  <% for (var i = 0; i < messages?.length; i++) {%>
  <li><%= messages[i] %></li>
  <% } %>
</ul>
